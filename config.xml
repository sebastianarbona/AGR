<?xml version='1.0' encoding='utf-8'?>
<widget id="org.mendoza.agroplagas" version="2.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AgroPlagas Mendoza</name>
    <description>
        Portal informativo sobre las plagas de mendoza y la manera de combatirlas.
    </description>
    <author email="dev@mendoza.gov.ar" href="http://agroindustria.mendoza.gov.ar">
        Ministerio de Agroindustria y Tecnolog√≠a - Gobierno de Mendoza
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

	<icon src="res/logo.png" />
</widget>
